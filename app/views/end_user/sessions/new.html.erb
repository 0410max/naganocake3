<h4 class='end-user-login-top'>ログイン</h4>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class='end_user_login'>
    <h4>会員の方はこちらからログイン</h4>

    <div class="field">
      <span>メールアドレス</span>
      <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder:'sample@example.com' %>
    </div>

    <div class="field">
      <span>パスワード</span>
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>

    <div class="actions">
      <%= f.submit "ログイン" %>
    </div>

    <h4 class='signup-link'>会員登録がお済みでない方</h4>
    <%= link_to 'こちら',new_end_user_registration_path %>から新規登録を行なってください。
  </div>
<% end %>


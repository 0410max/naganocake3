<br />

<div class='container'>
    <div class='row'>
        <div class='col-md-6 offset-1'>
            <h3>注文情報確認</h3>
            <table class='table table-bordered'>
                <tr>
                    <th>商品名</th>
                    <th>単価(税込)</th>
                    <th>数量</th>
                    <th>小計</th>
                </tr>
                <% @total_money = 0 %>
                <% @orders.each do |order| %>
                    <tr>
                        <td><%= image_tag order.item.image,class:'order-item-image' %><%= order.item.name %></td>
                        <td><%= order.item.with_tax_price.to_s(:delimited) %></td>
                        <td><%= order.amount %></td>
                        <td><%= order.subtotal.to_s(:delimited) %></td>
                    </tr>
                    <% @total_money += order.subtotal %>
                <% end %>
            </table>
            <span class='pay_way'>支払方法</span>
            <%= @order.pay_way_i18n %>
            <br />
「
            <span class='pay_way'>お届け先</span>
            〒<%= @order.ship_code %><%= @order.ship_address %><br /><%= @order.ship_name %>

            <br /><br />

            <%= form_with model:@order,url:orders_path do |f| %>
                <%= f.hidden_field :pay_way,value:@order.pay_way %>
                <%= f.hidden_field :ship_code,value:@order.ship_code %>
                <%= f.hidden_field :ship_address,value:@order.ship_address %>
                <%= f.hidden_field :ship_name,value:@order.ship_name %>
                <%= f.hidden_field :total_money,value:@total_money %>
                <%= f.submit '注文を確定する',class:'btn btn-success',data:{confirm:'注文を確定しますか？'} %> 
            <% end %>
            
        </div>

        <div class='col-md-4'>
            <br /><br />
            <table class='table table-bordered'>
                <tr>
                    <td>送料</td>
                    <td>800</td>
                </tr>
                <tr>
                    <td>商品合計</td>
                    <td><%= @total_money.to_s(:delimited) %></td>
                </tr>
                <tr>
                    <td>請求金額</td>
                    <td><%= (@total_money + 800).to_s(:delimited) %></td>
                </tr>
            </table>
        </div>
    </div>
</div>
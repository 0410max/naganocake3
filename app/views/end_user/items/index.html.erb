<div class='container'>
    <div class='row'>
        <div class='col-md-10'>
            <br /><br />
            <% a = 0 %>
            <% @items.each do |item| %>
                <% if item.is_sale == true %>
                    <% a += 1 %>
                <% end %>
            <% end %>

            <span class='items-index'>商品一覧</span>(全<%= a %>件)
            
            <div class='item-wrapper'>
                <% @items.each do |item| %>
                    <% if item.is_sale == true %>
                            <div class='item-content'>
                                <%= link_to end_user_item_path(item),class:'image-items-show-link' do %>
                                    <% if item.image.attached? %>
                                        <%= image_tag item.image,class:'image-size' %>
                                    <% end %>
                                <% end %><br />
                                <%= link_to item.name,end_user_item_path(item),class:'items-show-link' %><br />
                                ¥<%= link_to item.notax_money,end_user_item_path(item),class:'items-show-link' %>
                            </div>
                    <% end %>
                <% end %>
            </div>
            
        </div>
    </div>
</div>
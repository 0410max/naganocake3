<br /><br />

<div class='container'>
    <div class='row'>
        <div class='col-md-2'>
            <div class='search-genre-wrapper'>
                <div class='search-genre'>ジャンル検索</div>
                <% @genres.each do |genre| %>
                    <%= link_to search_items_path('genre_id'=>genre) do %>
                        <%= genre.name %>
                    <% end %>
                    <br />
                <% end %>
            </div>
        </div>
        <div class='col-md-10'>
            <% a = 0 %>
            <% @items.each do |item| %>
                <% if item.is_sale == true %>
                    <% a += 1 %>
                <% end %>
            <% end %>

            <span class='items-index'>商品一覧</span>(全<%= a %>件)
            
            <div class='item-wrapper'>
                <% @items.each do |item| %>

                    <% notax_money_num = item.notax_money.to_i %>
                    <% tax_money = notax_money_num * 1.1 %>
                    <% tax_money_int = tax_money.to_i %>

                    <% if item.is_sale == true %>
                            <div class='item-content'>
                                <%= link_to item_path(item),class:'image-items-show-link' do %>
                                    <% if item.image.attached? %>
                                        <%= image_tag item.image,class:'image-size' %>
                                    <% end %>
                                <% end %><br />
                                <%= link_to item.name,item_path(item),class:'items-show-link' %><br />
                                ¥<%= link_to tax_money_int,item_path(item),class:'items-show-link' %>
                            </div>
                    <% end %>
                <% end %>
            </div>
            
        </div>
    </div>
</div>
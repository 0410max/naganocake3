<h4 class='new_end_user_top'>新規会員登録</h4>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "end_user/shared/error_messages", resource: resource %>

  <div class='new_end_user_wrapper'>
    <div class="field">
      <span>名前</span>
      <span>(姓)</span><%= f.text_field :first_name, autofocus: true, autocomplete: "first_name",placeholder:'令和' %> 
      <span>(名)</span><%= f.text_field :last_name, autocomplete: "last_name",placeholder:'道子' %>
    </div>

    <div class="field">
      <span>フリガナ</span>
      <span>(セイ)</span><%= f.text_field :first_name_kana, autocomplete: "first_name_kana",placeholder:'レイワ' %>
      <span>(メイ)</span><%= f.text_field :last_name_kana, autocomplete: "last_name_kana",placeholder:'ミチコ' %><br />
    </div>

    <div class="field">
      <span>メールアドレス</span>
      <%= f.email_field :email, autocomplete: "first_name",placeholder:'sample@example.com' %>
    </div>

    <div class="field">
      <span>郵便番号(ハイフンなし)</span>
      <%= f.text_field :postcode, autocomplete: "postcode",placeholder:'0000000' %>
    </div>

    <div class="field">
      <span>住所</span>
      <%= f.text_field :address, autocomplete: "address",placeholder:'東京都渋谷区代々木神園町0-0' %>
    </div>

    <div class="field">
      <span>電話番号(ハイフンなし)</span>
      <%= f.text_field :phone_number, autocomplete: "phone_number",placeholder:'00000000000' %>
    </div>

    <div class="field">
      <span>パスワード(6文字以上)</span>
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <span>パスワード(確認用)</span>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="actions">
      <%= f.submit "新規登録",class:'btn btn-success' %>
    </div>

    <h4 class='login-link'>既に登録済みの方</h4>
    <%= link_to 'こちら', new_end_user_session_path %>からログインしてください。
  </div>
<% end %>


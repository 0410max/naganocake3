<div class='container'>
    <div class='row'>
        <div class='col-md-6'>
            <br /><br />
            
            <h4>ジャンル編集</h4>

            <%= form_with model:@genre,url:admin_genre_path(@genre),method: :patch do |f| %>        
                    ジャンル名
                    <%= f.text_field :name,placeholder:'ジャンル名' %>
                    <%= f.submit '変更を保存',class:'btn btn-success' %>

                <% if @genre.errors.any? %>
                    <div class="error">
                        <% @genre.errors.full_messages.each do |message| %>
                            <%= message %><br />
                        <% end %>
                    </div>
                <% end %><br />

            <% end %>   

        </div>
    </div>
</div>
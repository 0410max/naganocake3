<div class='container'>
    <div class='row'>
        <div class='col-md-6'>
            <br />
            <br />
            <h4>ジャンル一覧・追加</h4>

            <%= form_with model:@genre,url:admin_genres_path do |f| %>          
                <div>
                    <%= f.text_field :name,placeholder:'ジャンル名' %>
                    <%= f.submit '新規登録',class:'btn btn-success' %>
                </div>

                <% if @genre.errors.any? %>
                    <div class="error">
                        <% @genre.errors.full_messages.each do |message| %>
                            <%= message %><br />
                        <% end %>
                    </div>
                <% end %><br />

                <table class='table table'>
                    <tr>
                        <th colspan='2'>ジャンル</th>
                    </tr>
                    <% @genres.each do |genre| %>
                        <tr>
                            <td><%= genre.name %></td>
                            <td><%= link_to '編集する',edit_admin_genre_path(genre),class:'btn btn-success' %>
                        </tr>
                    <% end %>
                </table>
            <% end %>   
        </div>
    </div>
</div>
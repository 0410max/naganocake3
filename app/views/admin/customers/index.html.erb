<div class='container'>
    <div class='row'>
        <div class='col-md-6 customer-index-wrapper'>
            <table class='table table'>
                <tr>
                    <th>会員id</th>
                    <th>氏名</th>
                    <th>メールアドレス</th>
                    <th>ステータス</th>
                </tr>
                <% @customers.each do |customer| %>
                    <tr>
                        <td><%= customer.id %></td>
                        <td><%= customer.first_name %><%= customer.last_name %></td>
                        <td><%= customer.email %></td>
                        <td>
                            <% if customer.is_deleted == true %>
                                <span class='is_deleted-true'>退会</span>
                            <% else %>
                                <span class='is_deleted-false'>有効</span>
                            <% end %>
                        </td>
                    </tr>
                <% end %>
            </table>
        </div>
    </div>
</div>
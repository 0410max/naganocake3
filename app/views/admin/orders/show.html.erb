<div class='container'>
    <div class='row'>
        <div class='col-md-10 orders-show'>
            <br />
            <h4>注文履歴詳細</h4>
            <br />
            <table>
                <tr>
                    <td><span class='orders-show-td'>購入者</span></td>
                    <td><%= @order.end_user.first_name %><%= @order.end_user.last_name %></td>
                </tr>
                <tr>
                    <td><span class='orders-show-td'>注文日</span></td>
                    <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
                </tr>
                <tr>
                    <td><span class='orders-show-td'>配送先</span></td>
                    <td>〒<%= @order.ship_code %><%= @order.ship_address %><br /><%= @order.ship_name %></td>
                </tr>
                <tr>
                    <td><span class='orders-show-td'>支払方法</span></td>
                    <td><%= @order.pay_way_i18n %></td>
                </tr>
                <tr>
                    <td><span class='orders-show-td'>注文ステータス</span></td>
                    <td>
                        <%= form_with model:@order,url:admin_order_path do |f| %>
                            <%= f.select :status,Order.statuses_i18n.invert %>
                            <%= f.submit '更新',class:'btn btn-success' %>
                        <% end %>
                    </td>
                </tr>
            </table>
        </div>
    </div>

    <br />
    
    <div class='row'>
        <div class='col-md-7'>
                            
            <table class='table table'>
                <thead>
                    <tr>
                        <th>商品名</th>
                        <th>単価(税込)</th>
                        <th>数量</th>
                        <th>小計</th>
                        <th>製作ステータス</th>
                    </tr>
                </thead>
                <tbody>
                    <% @order_details.each do |order_detail| %>
                        <tr>
                            <td><%= order_detail.item.name %></td>
                            <td><%= order_detail.price.to_s(:delimited) %></td>
                            <td><%= order_detail.amount %></td>
                            <td><%= (order_detail.price * order_detail.amount).to_s(:delimited) %></td>
                            <td>
                                <%= form_with model:order_detail,url:admin_order_path do |f| %>
                                    <%= f.select :status,OrderDetail.making_statuses_i18n.invert %>
                                    <%= f.submit '更新',class:'btn btn-success' %>
                                <% end %>
                            </td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>

        <div class='col-md-5'>
            <p>あああ</p>
        </div>
    </div>
</div>

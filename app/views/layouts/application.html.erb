<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <% if end_user_signed_in? %>
        <ul class='login'>
          <li class='not-login-logo'>
            <%= link_to 'LOGO',root_path %>
          </li>
          <li class='not-login-item-index'>
            <%= link_to 'マイページ',end_user_customer_path(current_end_user) %>
          </li>
          <li class='not-login-item-index'>
            <%= link_to '商品一覧',end_user_items_path %>
          </li>
          <li class='not-login-item-index'>
            <%= link_to 'カート',end_user_cart_items_path %>
          </li>
          <li class='not-login-item-index'>
            <%= link_to 'ログアウト',destroy_end_user_session_path, method: :delete %>
          </li>
        </ul>
      <% elsif admin_signed_in? %>
        <ul class='login'>
          <li class='not-login-logo-admin'>
            <%= link_to 'LOGO',admin_homes_top_path %>
          </li>
          <li class='not-login-item-index'>
            <%= link_to '商品一覧',admin_items_path %>
          </li>
          <li class='not-login-item-index'>
            <%= link_to '会員一覧',admin_customers_path %>
          </li>
          <li class='not-login-item-index'>
            <a href="#">注文履歴一覧</a>
          </li>
          <li class='not-login-item-index'>
            <%= link_to 'ジャンル一覧',admin_genres_path %>
          </li>
          <li class='not-login-item-index'>
            <%= link_to 'ログアウト',destroy_admin_session_path, method: :delete %>
          </li>
        </ul><br />
        <span class='search-top'>
          <%= form_with url: search_admin_items_path,method: :get,local: true do |f| %>
            <span class='search-wrapper'>
              <%= f.text_field :name,class:'search',placeholder:'Search' %>
              <%= f.button :type => "submit",class:'search-submit' do%>
                  <i class="fas fa-search"></i>
              <% end %>
            </span>
          <% end %>
        </span>
      <% else %>
        <ul class='not-login'>
          <li class='not-login-logo'>
            <%= link_to 'LOGO',root_path %>
          </li>
          <li class='not-login-item-index'>
            <%= link_to '商品一覧',end_user_items_path %>
          </li>
          <li class='not-login-login'>
            <%= link_to 'ログイン',new_end_user_session_path %>
          </li>
          <li class='not-login-signup'>
            <%= link_to '新規登録',new_end_user_registration_path %>
          </li>
        </ul>
      <% end %>
    </header>
    <%= yield %>
  </body>
</html>

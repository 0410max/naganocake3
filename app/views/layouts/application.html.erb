<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <% if end_user_signed_in? %>
        <ul class='login'>
          <li class='not-login-logo'>
            <%= link_to 'LOGO',root_path %>
          </li>
          <li class='not-login-item-index'>
            <a href="#">商品一覧</a>
          </li>
          <li class='not-login-item-index'>
            <a href="#">カート</a>
          </li>
          <li class='not-login-item-index'>
            <%= link_to 'ログアウト',destroy_end_user_session_path, method: :delete %>
          </li>
        </ul>
      <% elsif admin_signed_in? %>
        <ul class='login'>
          <li class='not-login-logo-admin'>
            <%= link_to 'LOGO',admin_homes_top_path %>
          </li>
          <li class='not-login-item-index'>
            <a href="#">商品一覧</a>
          </li>
          <li class='not-login-item-index'>
            <a href="#">会員一覧</a>
          </li>
          <li class='not-login-item-index'>
            <a href="#">注文履歴一覧</a>
          </li>
          <li class='not-login-item-index'>
            <a href="#">ジャンル一覧</a>
          </li>
          <li class='not-login-item-index'>
            <%= link_to 'ログアウト',destroy_admin_session_path, method: :delete %>
          </li>
        </ul>
      <% else %>
        <ul class='not-login'>
          <li class='not-login-logo'>
            <%= link_to 'LOGO',root_path%>
          </li>
          <li class='not-login-item-index'>
            <a href="#">商品一覧</a>
          </li>
          <li class='not-login-login'>
            <%= link_to 'ログイン',new_end_user_session_path %>
          </li>
          <li class='not-login-signup'>
            <%= link_to '新規登録',new_end_user_registration_path %>
          </li>
        </ul>
      <% end %>
    </header>
    <%= yield %>
  </body>
</html>
